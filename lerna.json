{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "loglevel": "verbose",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish new version %v",
      "pushTagsOneByOne": true
    }
  },
  "packages": ["packages/*"]
}
